[Unit]
Description=Ensure systemd-tmpfiles is run, else race condition experienced
Before=network.target getty.target

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=/usr/bin/systemd-tmpfiles --boot --create

[Install]
WantedBy=sysinit.target
